%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%CONTEXT
bool = true
# ------------------------------------------------------------
%INPUT
<p th:value="${'Hello'}">...</p>
<p th:value="${'Hello'} + ${''}">...</p>
<p th:value="${'Hello'} + ${2}">...</p>
<p th:value="|${'Hello'} ${2}|">...</p>
<p th:value="|${'Hello'} ${bool}|">...</p>
<p th:value="|${'Hello'} false|">...</p>
<p th:value="false">...</p>
<p th:value="2314">...</p>
# ------------------------------------------------------------
%OUTPUT
<p value="Hello">...</p>
<p value="Hello">...</p>
<p value="Hello[2]">...</p>
<p value="Hello [2]">...</p>
<p value="Hello [true]">...</p>
<p value="Hello false">...</p>
<p value="[false]">...</p>
<p value="[2314]">...</p>

