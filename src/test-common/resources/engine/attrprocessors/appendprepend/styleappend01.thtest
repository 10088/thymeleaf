%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%CONTEXT
color = 'color: green;'
# ------------------------------------------------------------
%INPUT
<div th:styleappend="${color}">..</div>
<div th:styleappend="'color: blue;'">..</div>
<div th:styleappend="${null}">..</div>
<div th:styleappend="''">..</div>

<div style="font-weight: bold;" th:styleappend="${color}">..</div>
<div style="font-weight: bold;" th:styleappend="'color: blue;'">..</div>
<div style="font-weight: bold;" th:styleappend="${null}">..</div>
<div style="font-weight: bold;" th:styleappend="''">..</div>

<div style="" th:styleappend="${color}">..</div>
<div style="" th:styleappend="'color: blue;'">..</div>
<div style="" th:styleappend="${null}">..</div>
<div style="" th:styleappend="''">..</div>
# ------------------------------------------------------------
%OUTPUT
<div style="color: green;">..</div>
<div style="color: blue;">..</div>
<div>..</div>
<div>..</div>

<div style="font-weight: bold; color: green;">..</div>
<div style="font-weight: bold; color: blue;">..</div>
<div style="font-weight: bold;">..</div>
<div style="font-weight: bold;">..</div>

<div style="color: green;">..</div>
<div style="color: blue;">..</div>
<div style="">..</div>
<div style="">..</div>
