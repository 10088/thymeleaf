<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 https://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>dist</id>
  
  <formats>
    <format>zip</format>
  </formats>
  
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/../lib/thymeleaf/target/apidocs/</directory>
      <outputDirectory>/apidocs/thymeleaf/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/thymeleaf-spring5/target/apidocs/</directory>
      <outputDirectory>/apidocs/thymeleaf-spring5/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/thymeleaf-spring6/target/apidocs/</directory>
      <outputDirectory>/apidocs/thymeleaf-spring6/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/testing/thymeleaf-testing/target/apidocs/</directory>
      <outputDirectory>/apidocs/thymeleaf-testing/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/testing/thymeleaf-testing-spring5/target/apidocs/</directory>
      <outputDirectory>/apidocs/thymeleaf-testing-spring5/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/testing/thymeleaf-testing-spring6/target/apidocs/</directory>
      <outputDirectory>/apidocs/thymeleaf-testing-spring6/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/thymeleaf/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>thymeleaf-${project.version}.jar</include>
        <include>thymeleaf-${project.version}-javadoc.jar</include>
        <include>thymeleaf-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/thymeleaf-spring5/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>thymeleaf-spring5-${project.version}.jar</include>
        <include>thymeleaf-spring5-${project.version}-javadoc.jar</include>
        <include>thymeleaf-spring5-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/thymeleaf-spring6/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>thymeleaf-spring6-${project.version}.jar</include>
        <include>thymeleaf-spring6-${project.version}-javadoc.jar</include>
        <include>thymeleaf-spring6-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/testing/thymeleaf-testing/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>thymeleaf-testing-${project.version}.jar</include>
        <include>thymeleaf-testing-${project.version}-javadoc.jar</include>
        <include>thymeleaf-testing-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/testing/thymeleaf-testing-spring5/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>thymeleaf-testing-spring5-${project.version}.jar</include>
        <include>thymeleaf-testing-spring5-${project.version}-javadoc.jar</include>
        <include>thymeleaf-testing-spring5-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../lib/testing/thymeleaf-testing-spring6/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>thymeleaf-testing-spring6-${project.version}.jar</include>
        <include>thymeleaf-testing-spring6-${project.version}-javadoc.jar</include>
        <include>thymeleaf-testing-spring6-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/..</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
  </fileSets>
    
    
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.thymeleaf:thymeleaf</exclude>
        <exclude>org.thymeleaf:thymeleaf-spring5</exclude>
        <exclude>org.thymeleaf:thymeleaf-spring6</exclude>
        <exclude>org.thymeleaf:thymeleaf-testing</exclude>
        <exclude>org.thymeleaf:thymeleaf-testing-spring5</exclude>
        <exclude>org.thymeleaf:thymeleaf-testing-spring6</exclude>
      </excludes>
    </dependencySet>
  </dependencySets> 
  
  
</assembly>
